<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">
<LinearLayout
    android:background="@color/app_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/action_bar_layout"
        layout="@layout/toolbar_top_view"/>
    <Button
        android:id="@+id/btn_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ty_scene_device"
        android:padding="@dimen/mg_16"
        android:visibility="gone"
        android:background="@drawable/button_template"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_userinput"
        android:hint="请选择日期"
        android:padding="8dp"
        android:visibility="gone"
        android:textColorHint="@color/black_40"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_getList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_template"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:text="获取定时器列表"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_list"
            android:layout_width="match_parent"
            android:layout_height="160dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_gettimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_template"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:text="获取定时任务定时"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="match_parent"
            android:layout_height="241dp" />

    </LinearLayout>

</LinearLayout>>
</ScrollView>